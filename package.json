{
  "name": "elfviz",
  "displayName": "elfviz",
  "description": "Helps Visualize an Executable/Libraries on a Binary level.",
  "version": "0.0.3",
  "publisher": "PristalMMangattu",
  "repository": {
    "url": "https://github.com/PristalMMangattu/execview.git"
  },
  "author": {
    "name": "Pristal M Mangattu",
    "email": "pristalmangattu@gmail.com"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "ExecVisualizer",
      "properties": {
        "elfviz.enable": {
          "type": "boolean",
          "default": true,
          "scope": "window",
          "description": "Enable the Extension"
        },
        "elfviz.fileAccess": {
          "type": "string",
          "default": "/",
          "scope": "window",
          "description": "Restricts the extension to load only from provided path."
        },
        "elfviz.fileUtilPath": {
          "type": "string",
          "default": "/usr/bin/file",
          "scope": "window",
          "description": "Path to file utility."
        },
        "elfviz.readelfPath": {
          "type": "string",
          "default": "/usr/bin/readelf",
          "scope": "window",
          "description": "Path to readelf utility."
        },
        "elfviz.objdumpPath": {
          "type": "string",
          "default": "/usr/bin/objdump",
          "scope": "window",
          "description": "Path to objdump utility."
        },
        "elfviz.hexdumpPath": {
          "type": "string",
          "default": "/usr/bin/objdump",
          "scope": "window",
          "description": "Path to hex utility."
        },
        "elfviz.wcPath": {
          "type": "string",
          "default": "/usr/bin/wc",
          "scope": "window",
          "description": "Path to wc utility."
        },
        "elfviz.commandTimeout": {
          "type": "number",
          "default": 60,
          "scope": "window",
          "description": "Command execution timeout."
        },
        "elfviz.logDir": {
          "type": "string",
          "default": "/var/tmp/elfviz/",
          "scope": "window",
          "description": "Directory that will be used to store log files."
        },
        "elfviz.logLevel": {
          "type": "string",
          "enum": [
            "error",
            "warn",
            "info",
            "verbose"
          ],
          "default": "info",
          "scope": "window",
          "description": "Logging level."
        }
      }
    },
    "commands": [
      {
        "command": "elfviz.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "elfviz.openFile",
        "title": "Open Executable File"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "elfviz",
          "title": "ELF Visualizer",
          "icon": "media/ev.svg"
        }
      ]
    },
    "views": {
      "elfviz": [
        {
          "id": "metadata",
          "name": "Metadata"
        },
        {
          "id": "section-view",
          "name": "Sections"
        },
        {
          "id": "segment-view",
          "name": "Segments"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "metadata",
        "contents": "In order to use elfviz features, you need open a ELF binay.\n[Open File](command:elfviz.openFile)\nTo learn more about how to use ELF Visualizer in VS Code [read our docs](https://pristals.com/exec-viewer).",
        "when": "config.elfviz.enable"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "complete-build": "./build.sh",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@vscode-elements/elements": "^2.4.0",
    "ajv": "^8.17.1",
    "vsce": "^2.15.0",
    "winston": "^3.19.0",
    "winston-transport-vscode": "^0.1.0"
  }
}
